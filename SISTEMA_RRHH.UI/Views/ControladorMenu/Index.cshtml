@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Menú Principal";
    var usuario = ViewBag.Usuario as string;
}

<style>
    body {
        background-image: url('/imagenes/trabajo.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #000000;
        font-family: 'Segoe UI', sans-serif;
    }

    .menu-container {
        display: flex;
        justify-content: flex-start;
        padding: 60px 0 80px 0; /* sin padding izquierdo */
        margin-left: 0;
    }



    .menu-botones {
        margin-left: 0 !important;
        padding-left: 0 !important;
        align-items: flex-start;
    }


    .bienvenida,
    .d-grid {
        padding-left: 0;
        margin-left: 0;
    }


    .bienvenida h4 {
        font-size: 1.5rem;
        color: #007bff;
        word-break: break-word;
    }

    .bienvenida p {
        font-size: 1.1rem;
        color: #555;
    }

    .menu-btn {
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 500;
        border: none;
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        width: 100%;
        margin-bottom: 15px;
    }

        .menu-btn:hover {
            transform: scale(1.03);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    .btn-funcionarios {
        background-color: #007bff;
        color: #fff;
    }

    .btn-impuestos {
        background-color: #28a745;
        color: #fff;
    }

    .btn-planilla {
        background-color: #17a2b8;
        color: #fff;
    }

    .btn-acerca {
        background-color: #6c757d;
        color: #fff;
    }

    .btn-salir {
        background-color: #dc3545;
        color: #fff;
    }
</style>

<div class="container-fluid mt-5 px-0">
  <!-- 🔹 Usamos container-fluid para máximo ancho -->
    <div class="menu-container w-100">

        <div class="menu-botones">
            <div class="bienvenida text-start mb-4">
                <h2 class="mb-1">Bienvenido,</h2>
                <h4>@usuario</h4>
                <p class="mt-3 mb-0">¿Qué desea hacer?</p>
            </div>

            <div class="d-grid gap-3">
                <a class="btn menu-btn btn-funcionarios" asp-controller="ControladorFuncionarios" asp-action="Index">
                    👥 Gestión de Funcionarios
                </a>
                <a class="btn menu-btn btn-impuestos" asp-controller="ControladorMantenimientoImpuestos" asp-action="Indice">
                    💰 Gestión de Impuestos
                </a>
                <a class="btn menu-btn btn-planilla" asp-controller="ControladorPlanilla" asp-action="Index">
                    🧾 Cálculo de Planilla
                </a>
                <a class="btn menu-btn btn-acerca" asp-controller="ControladorMenu" asp-action="Acerca">
                    📘 Acerca de
                </a>
                <a class="btn menu-btn btn-salir" asp-controller="ControladorMenu" asp-action="CerrarSesion">
                    🚪 Cerrar Sesión
                </a>
            </div>
        </div>
    </div>
</div>
