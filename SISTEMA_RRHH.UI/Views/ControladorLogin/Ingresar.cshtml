@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #2c3e50, #34495e);
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            max-width: 420px;
            margin: 80px auto;
            padding: 35px 30px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .login-header h2 {
            font-weight: bold;
            color: #2c3e50;
        }

        .login-header p {
            font-size: 0.95rem;
            color: #7f8c8d;
        }

        .form-control {
            height: 45px;
            border-radius: 10px;
        }

        .btn-login {
            background-color: #2c3e50;
            color: #fff;
            font-size: 1.1rem;
            padding: 10px;
            border-radius: 10px;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #1a242f;
            }

        .forgot-password a {
            font-size: 0.9rem;
            color: #2980b9;
        }

        .form-label i {
            color: #2c3e50;
            margin-right: 6px;
        }

        .top-title {
            color: #ecf0f1;
            text-align: center;
            font-size: 2.2rem;
            font-weight: 600;
            margin-top: 60px;
            letter-spacing: 1px;
        }
    </style>
</head>
<body>

    <div class="top-title">Sistema de Planilla</div>

    <div class="login-container">
        <div class="login-header text-center mb-4">
            <h2>Iniciar Sesión</h2>
            <p>Accede con tu usuario institucional</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-controller="ControladorLogin" asp-action="Ingresar">
            <div class="mb-3">
                <label for="correo" class="form-label"><i class="fas fa-envelope"></i> Correo electrónico</label>
                <input type="email" class="form-control" id="correo" name="correo" placeholder="usuario@ejemplo.com" required />
            </div>
            <div class="mb-3">
                <label for="contrasena" class="form-label"><i class="fas fa-lock"></i> Contraseña</label>
                <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="********" required />
            </div>

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-login">Ingresar</button>
            </div>

            <div class="forgot-password text-end">
                <a href="@Url.Action("CambiarContrasena", "ControladorLogin")">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
